{
  "name": "dev-page-indicator",
  "version": "1.0.0",
  "description": "A powerful development tool for Next.js/React apps that shows current page, component detection, and smart context copying",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts --external react",
    "dev": "tsup src/index.tsx --format cjs,esm --dts --external react --watch",
    "lint": "eslint src",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nextjs",
    "react",
    "development",
    "devtools",
    "component-detection",
    "debugging",
    "developer-experience",
    "dx"
  ],
  "author": "John Thomas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonkthomas/dev-page-indicator"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "react-hot-toast": "^2.4.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "next": ">=12.0.0"
  }
}
